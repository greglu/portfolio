!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      Greg Lu
      = " - " + @page.title unless @page.title.nil?
    %meta{ :content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type" }/
    %link{ :href => "/css/EliteCircle.css", :rel => "stylesheet", :type => "text/css" }/
    %link{ :href => "/css/jquery.lightbox-0.5.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }/
    %script{ :type => "text/javascript", :src => "/js/jquery-1.3.1.min.js" }
    %script{ :type => "text/javascript", :src => "/js/jquery.scrollTo-min.js" }
    %script{ :type => "text/javascript", :src => "/js/jquery.lightbox-0.5.min.js" }
    %script{ :type => "text/javascript", :src => "/js/jquery.expander.js" }

    %script{ :type => "text/javascript" }
      $(function() {
      $('a[rel=lightbox]').lightBox();
      });
      
    %script{ :type => "text/javascript" }
      $(document).ready(function() {
      $('.expandable').expander({
      slicePoint: 0,
      expandPrefix: '',
      expandText: '[...]',
      collapseTimer: 0,
      userCollapseText: '[^]'
      });
      });

  %body
    #header
      #header-content
      
        %h1#logo
          Greg
          %span.orange Lu
        %h2#slogan Web application developer
        
        #header-links
          %p
            %a{ :href => "http://www.greglu.com/" } Home
            |
            %a{ :href => "#", :onclick => "$.scrollTo( '#contact', 1000 );" } Contact
        %ul
          - @pages.delete_if{|x| x.name.nil? }.each do |page|
          - if @page.path == page.path
          %li= link_to page.name, page.path, :id => "current"
          - else
          %li= link_to page.name, page.path
          - end
          - end
          %li
            %a{ :href => "/Gregory_Lu-CV.pdf" } CV

    #content-wrap
      #content
        #main= @page.content

    #footer
      #footer-content
        #contact.col.float-left.space-sep
          %h2
            Contact Information
          %ul.columns
            %li.top
              %strong Email
              \- greg.lu [at] gmail [dot] com
            %li
              %strong Telephone
              \- (514) 815-3611
            %li
              %a{ :href => "/Gregory_Lu-CV.pdf" }
                %strong Curriculum Vitae
                
        .col.float-left
          %h2
            Links
          %ul.columns
            %li.top
              %a{ :href => "http://github.com/enell", :target => "_blank" }
                %strong Github Profile
            %li
              %a{ :href => "http://g-lunit.blogspot.com", :target => "_blank" }
                %strong Development Blog
            %li
              %a{ :href => "http://workingwithrails.com/person/7317-gregory-lu", :target => "_blank" }
                %strong WorkingWithRails Page
                
        .col2.float-right
          %p
            #copyright
              &copy; Copyright 2009
              %strong
                Gregory Lu
            #design
              Design by:
              %a{ :href => "http://www.styleshout.com/" } styleshout
            #valid
              Valid
              %a{ :href => "http://jigsaw.w3.org/css-validator/check/referer" } CSS
              |
              %a{ :href => "http://validator.w3.org/check/referer" } XHTML
          %p
            %ul
              %li
                %a{ :href => "http://www.gregorylu.com" } Home
              %li
                %a{ :href => "#", :onclick => "$.scrollTo( '#header', 1000 );" } Back to Top

    %script{ :type => "text/javascript" }
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

    %script{ :type => "text/javascript" }
      try {
      var pageTracker = _gat._getTracker("UA-7587231-1");
      pageTracker._trackPageview();
      } catch(err) {}
